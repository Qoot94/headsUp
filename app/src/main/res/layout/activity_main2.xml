<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/gallery_thumb"
    android:backgroundTint="#00f5d4"
    android:backgroundTintMode="src_in"
    tools:context=".UpdateDeleteActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@android:drawable/spinner_background"
        android:backgroundTint="#CDF15BB5"
        android:clipToPadding="true"
        android:dividerPadding="10dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/etPK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/button_onoff_indicator_on"
                android:backgroundTint="#31FEFEFF"
                android:ems="10"
                android:hint="pk.."
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/button_onoff_indicator_on"
                android:backgroundTint="#31FEFEFF"
                android:ems="10"
                android:hint="celeb name..."
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etTaboo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/button_onoff_indicator_on"
                android:backgroundTint="#31FEFEFF"
                android:ems="10"
                android:hint="first taboo.."
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etTaboo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/button_onoff_indicator_on"
                android:backgroundTint="#31FEFEFF"
                android:ems="10"
                android:hint="second taboo.."
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etTaboo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@android:drawable/button_onoff_indicator_on"
                android:backgroundTint="#31FEFEFF"
                android:ems="10"
                android:hint="third taboo.."
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:background="@color/purple_700"
            android:backgroundTintMode="screen"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageButton
                android:id="@+id/ibAdding"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_add_circle_24"
                android:backgroundTint="#FCF7EA"
                android:pointerIcon="context_menu"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ibUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/ic_baseline_edit_note_24"
                android:backgroundTint="#FCF7EA"
                android:pointerIcon="context_menu"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ibDel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_baseline_delete_forever_24"
                android:backgroundTint="#FBF7EB"
                android:padding="5dp"
                android:pointerIcon="context_menu"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>